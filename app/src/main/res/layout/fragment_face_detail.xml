<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="vinnik.facerecognizer.NavigationSection.FaceDetailFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_centerHorizontal="true"
                android:id="@+id/face_detail_face"
                android:layout_marginTop="40px"
                android:padding="5dp"
                android:background="@android:color/holo_green_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="First Name: "
                    android:layout_weight="20"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textSize="20sp"
                    android:gravity="center" />

                <EditText
                    android:layout_weight="80"
                    android:id="@+id/face_detail_first_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:layout_below="@id/face_detail_face"
                    android:text="Name"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="Middle Name: "
                    android:layout_weight="20"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textSize="20sp"
                    android:gravity="center" />

                <EditText
                    android:layout_weight="80"
                    android:id="@+id/face_detail_middle_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:layout_below="@id/face_detail_face"
                    android:text="Name"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="Last Name: "
                    android:layout_weight="20"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textSize="20sp"
                    android:gravity="center" />

                <EditText
                    android:layout_weight="80"
                    android:id="@+id/face_detail_last_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:layout_below="@id/face_detail_face"
                    android:text="Name"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="Short Name: "
                    android:layout_weight="20"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textSize="20sp"
                    android:gravity="center" />

                <EditText
                    android:layout_weight="80"
                    android:id="@+id/face_detail_short_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:layout_below="@id/face_detail_face"
                    android:text="Name"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="City: "
                    android:layout_weight="20"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textSize="20sp"
                    android:gravity="center" />

                <EditText
                    android:layout_weight="80"
                    android:id="@+id/face_detail_city"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:layout_below="@id/face_detail_face"
                    android:text="Name"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/face_detail_save_button"
                    android:text="@string/save_button_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:id="@+id/face_detail_delete_button"
                    android:text="@string/face_detail_delete_button_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:id="@+id/face_detail_back_button"
                    android:text="@string/back_button_string"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true" />
            </LinearLayout>
        </LinearLayout>
        >
    </ScrollView>
</FrameLayout>
